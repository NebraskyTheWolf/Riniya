{
  "compilerOptions": {
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src/",
    "skipLibCheck": true,
    "paths": {
      "@riniya.ts/types": [
        "types.ts"
      ],
      "@riniya.ts/logger": [
        "utils/Logger.ts"
      ],
      "@riniya.ts": [
        "index.ts"
      ],
      "@riniya.ts/utils/*": [
        "utils/*"
      ],
      "@riniya.ts/database/*": [
        "database/Models/*"
      ],
      "@riniya.ts/components/*": [
        "abstracts/components/*"
      ],
      "@riniya.ts/server/*": [
        "abstracts/server/*"
      ],
      "@rinia.ts/controllers/*": [
        "api/controllers/*"
      ],
      "@riniya.ts/cache": [
        "cache/CacheManager.ts"
      ]
    }
  },
  "exclude": [
    "data",
    "tests",
    "tsconfig.json"
  ]
}