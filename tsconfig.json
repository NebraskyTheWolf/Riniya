{
  "compilerOptions": {
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src/",
    "skipLibCheck": true,
    "paths": {
      "@types": [
        "types.ts"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "data",
    "tests",
    "tsconfig.json"
  ]
}